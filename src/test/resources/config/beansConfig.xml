<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <bean id="billControllerBean" class="com.murong.wjl.testspringboot2.Controller.billController">
        <!-- collaborators and configuration for this bean go here -->
    </bean>


    <dubbo:reference id="dubboService" version="1.0.0" interface="com.wjl.dubbo.test.service.DubboService"></dubbo:reference>


    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:jdbc.properties</value>
            </list>
        </property>
    </bean>


    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName">
            <value>${jdbc_driverClassName}</value>
        </property>
        <property name="url">
            <value>${jdbc_url}</value>
        </property>
        <property name="username">
            <value>${jdbc_username}</value>
        </property>
        <property name="password">
            <value>${jdbc_password}</value>
        </property>
    </bean>


    <bean id="dataSourceSwitcher" class="com.murong.wjl.testng.dbUtils.DataSourceSwitcher">
        <property name="dataSourceMap">
            <map>
                <entry key="01" value-ref="dataSource"></entry>
            </map>
        </property>
        <property name="defaultDataSource" ref="dataSource"/>
    </bean>

</beans>